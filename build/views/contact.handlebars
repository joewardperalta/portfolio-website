<section class="section" id="contact-section">
  <div class="container">
    <div class="row justify-content-center text-center">
      <div class="col-lg-6">
        <div class="section-heading">
          <h2>Contact Me</h2>
          <p>If you have any questions, you can reach me either by email or
            connect with me through my social links.</p>
        </div>
      </div>
    </div>

    <div class="row">
      {{! Social links }}
      <div class="col-lg-6 mb-5 mb-lg-0" id="social-connection">
        <div class="row g-3 text-center text-lg-start">
          <div class="col-12">
            <h5>Connect on LinkedIn</h5>
            <a
              href="https://www.linkedin.com/in/joewardperalta/"
              target="_blank"
            >www.linkedin.com/in/joewardperalta</a>
          </div>

          <div class="col-12">
            <h5>Follow on Facebook</h5>
            <a
              href="https://www.facebook.com/joewardperalta.joe/"
            >www.facebook.com/joewardperalta.joe</a>
          </div>

          <div class="col-12">
            <h5>Phone Support</h5>
            <p>Hours: 9am - 5pm (EST), Saturday</p>
            <p>647-901-3040</p>
          </div>
        </div>
      </div>

      {{! Form }}
      <div class="col-lg-6">
        <form class="row g-3" method="post">
          <div class="col-md-6">
            <label for="firstname" class="form-label">First name</label>
            <input
              type="text"
              name="firstname"
              id="firstname"
              class="form-control active"
            />
          </div>

          <div class="col-md-6">
            <label for="lastname" class="form-label">Last name</label>
            <input
              type="text"
              name="lastname"
              id="lastname"
              class="form-control"
            />
          </div>

          <div class="col-12">
            <label for="email" class="form-label">Email</label>
            <input type="email" name="email" id="email" class="form-control" />
          </div>

          <div class="col-12">
            <label for="subject" class="form-label">Subject</label>
            <input
              type="text"
              name="subject"
              id="subject"
              class="form-control"
            />
          </div>

          <div class="col-12">
            <label for="message" class="form-label">Message</label>
            <textarea
              name="message"
              id=""
              cols="30"
              rows="10"
              class="form-control"
            ></textarea>
          </div>

          <div class="col-auto">
            <button type="submit" class="btn btn-primary">Send message</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>