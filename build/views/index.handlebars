{{! Hero section }}
<section class="section bg-dark" id="hero-section">
  <div class="container">
    <div class="row align-items-center">
      <div class="col" id="hero-description">
        {{! Hero section heading }}
        <div class="text-light text-center">
          <h1 class="title my-3">Full Stack Web Developer</h1>
          <p class="subtitle mb-5">
            I love creating static and dynamic websites!
          </p>
          <a class="btn btn-primary" href="#about-section">Learn more about me
            <span>
              <i
                class="fa-solid fa-arrow-down ms-2"
                style="color: #ffffff;"
              ></i>
            </span>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

{{! About section }}
<section class="section" id="about-section">
  <div class="container">
    {{! About section heading }}
    <div class="row justify-content-center">
      <div class="col-lg-6">
        <div class="section-heading text-center">
          <h2 class="heading-title">About Me</h2>
          <p class="heading-subtitle">
            Learn who I am and the skills I possess
          </p>
        </div>
      </div>
    </div>

    {{! About section body }}
    <div class="row gx-5 align-items-center">
      {{! Profile picture }}
      <div class="col-lg-6 mb-4 mb-lg-0" id="profile-picture">
        <img
          src="/images/profile.jpg"
          alt="My profile picture wearing blue suit"
        />
      </div>

      {{! About description }}
      <div class="col-lg-6" id="about-description">
        <h3>My name is Joeward Peralta</h3>
        <p>
          I'm a Full-stack web developer. I'm currently studying in Seneca
          College Newnham in Computer Programming and Analysis. I have knowledge
          in various languages: HTML, CSS, JavaScript, C, C++, Node.js,
          Express.js, Bootstrap, MongoDB, SQL.
        </p>

        <div class="col mt-5" id="skills-container">
          {{#each skills}}
            <div
              class="progress px-0 my-1"
              role="progressbar"
              aria-label="{{label}}"
              aria-valuenow="70"
              aria-valuemin="0"
              aria-valuemax="100"
            >
              <div
                class="progress-bar"
                style="width: {{percentage}}%"
              >{{label}}</div>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</section>

{{! Resume section }}
<section class="section" id="resume-section">
  <div class="container">
    <div class="row justify-content-center">
      {{! Resume section heading }}
      <div class="col-lg-6">
        <div class="section-heading text-center">
          <h2 class="heading-title">My Resume</h2>
          <p class="heading-subtitle">
            Check out my official resume document
          </p>
        </div>
      </div>
    </div>

    {{! Resume section body }}
    <div class="row align-items-center">
      {{! Resume download }}
      <div class="col-lg-6 mb-4 mb-lg-0">
        <div class="text-center">
          <p>
            You can download a PDF version of my resume by clicking the button
            below
          </p>
          <a
            class="btn btn-primary"
            href="/files/resume.pdf"
            download=""
          >Download here
            <i class="fa-solid fa-file-arrow-down ms-2"></i>
          </a>
        </div>
      </div>

      {{! Resume img }}
      <div class="col-lg-6">
        <img class="shadow-lg" src="/images/resume-page1.jpg" alt="Resume" />
      </div>
    </div>
  </div>
</section>

{{! Contact section }}
<section class="section bg-dark text-white" id="contact-section">
  <div class="container">
    <div class="row">
      {{! Contact section heading }}
      <div class="col-12">
        <div class="section-heading text-center">
          <h2 class="heading-title">Contact Me</h2>
        </div>
      </div>

      {{! Contact section body }}
      <div class="col text-center">
        <p class="mb-0">
          For any questions please email joeward_peralta@outlook.com
        </p>
      </div>
    </div>
  </div>
</section>